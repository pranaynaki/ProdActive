{
  "manifest_version": 2,

  "name": "Prodactive",
  "description": "This extension allows the user to be more productive.",
  "version": "1.0",
  "icons":
  {
     "128": "icon128.png",
     "48": "icon48.png"
  },
  //////
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  //////
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click new here!"   ////
  },
  "permissions": [
    "background",
    "activeTab",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}